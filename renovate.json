{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["crossplane-contrib/provider-aws-*"],
      "groupName": "AWS Providers"
    },
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["crossplane-contrib/function-*"],
      "groupName": "Crossplane Functions"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["upbound\\.yaml$", "apis/.*/configuration\\.yaml$"],
      "matchStrings": [
        "package:\\s*xpkg\\.crossplane\\.io/(?<depName>[^\\s]+)\\s*\\n\\s*version:\\s*['\"]?>=v?(?<currentValue>[^'\"\\s]+)"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    }
  ]
}
